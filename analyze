#!/usr/bin/env python3
import matplotlib.pyplot as plt
import seaborn           as sns
import pandas            as ps

def heatmap(filename):
    data = ps.read_csv(filename).set_index('Source')
    data = data[['Reddit', 'Facebook', 'Twitter']]
    sns.heatmap(data)
    plt.show()

#for filename in ['fake', 'right', 'left', 'center', 'ultraproper']:
#    heatmap(filename + '.csv')
heatmap('ultraproper.csv')
